@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            Brand List
                        </h4>
                        <p class="card-subtitle mb-4">
                            Brand edit page.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Brands</th>
                                        <th>Remove</th>
                                        <th>Update</th>
                                        <th>Cars of the brand</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td><a href="/AdminBrand/RemoveBrand/@item.Id" class="btn btn-outline-danger">Remove</a></td>
                                            <td><a href="/AdminBrand/UpdateBrand/@item.Id" class="btn btn-outline-success">Update</a></td>
                                            <td><a href="/AdminBrand/UpdateBrand/@item.Id" class="btn btn-outline-dark">Cars of the brand</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a href="/AdminBrand/CreateBrand/" class="btn btn-outline-primary">Create Brand</a></td>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->



        </div>
        <!-- end col -->
    </div>

    <!-- end page title -->

</div> <!-- container-fluid -->
