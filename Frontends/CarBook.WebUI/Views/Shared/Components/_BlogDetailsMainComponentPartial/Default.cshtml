@model GetBlogByIdDto
<div class="col-md-8 ftco-animate">

    <h2 class="mb-3">@Model.Title</h2>
    <p>@Model.Description</p>

    @await Component.InvokeAsync("_BlogDetailCloudTagByBlogComponentPartial", new { Id = ViewBag.Id })

    @await Component.InvokeAsync("_BlogDetailsAuthorAboutComponentPartial", new { Id = ViewBag.Id })

    <div class="pt-5 mt-5">
        <h3 class="mb-5">Comments</h3>

        @await Component.InvokeAsync("_CommentListByBlogComponentPartial", new { Id = ViewBag.Id })

        @*@await Component.InvokeAsync("_AddCommentComponentPartial")*@
        @await Html.PartialAsync("~/Views/Blog/AddComment.cshtml", new { Id = ViewBag.Id })

    </div>
</div>