@model AddRoleUserDto
@{
    ViewData["Title"] = "AddUserRole";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add Role</h4>
                        <p class="card-subtitle mb-4">Please fill in the information about the vehicle completely.</p>

                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputBrand">Role</label>
                                @Html.DropDownListFor(x => x.Role, (List<SelectListItem>)ViewBag.RoleValues, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Username</label>
                                <input type="text" class="form-control" id="exampleInputUsername" asp-for="Username" placeholder="Username">
                            </div>
                            

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Add Role </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

