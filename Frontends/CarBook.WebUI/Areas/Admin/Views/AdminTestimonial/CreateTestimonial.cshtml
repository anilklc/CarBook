@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Testimonial</h4>
                        <p class="card-subtitle mb-4">Please fill in the information about the vehicle completely.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Name</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Name">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Title</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputComment">Comment</label>
                                <input type="text" class="form-control" id="exampleInputComment" asp-for="Comment" placeholder="Comment">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Image Url</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="ImageUrl">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Create Testimonial</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


