@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                                Home Page Banner Area
                        </h4>
                        <p class="card-subtitle mb-4">
                            Home page banner area edit page.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Video Description</th>
                                        <th>Video Url</th>
                                        <th>Remove</th>
                                        <th>Update</th>
                                        <th>Watch Video</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.VideoDescription</td>
                                            <td>@item.VideoUrl</td>
                                            <td><a href="/Admin/AdminBanner/RemoveBanner/@item.Id" class="btn btn-outline-danger">Remove</a></td>
                                            <td><a href="/Admin/AdminBanner/UpdateBanner/@item.Id" class="btn btn-outline-success">Update</a></td>
                                            <td><a href="@item.VideoUrl" target="_blank" class="btn btn-outline-dark">Watch Video</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a href="/Admin/AdminBanner/CreateBanner/"  class="btn btn-outline-primary">Create Banner</a></td>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->



        </div>
        <!-- end col -->
    </div>

    <!-- end page title -->

</div> <!-- container-fluid -->