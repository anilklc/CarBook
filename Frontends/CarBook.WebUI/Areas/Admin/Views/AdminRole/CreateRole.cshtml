@model CreateRoleDto
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Role</h4>
                    <p class="card-subtitle mb-4">Please fill in the information about the vehicle completely.</p>
                    <form method="post">
                        <div class="form-group">
                            <label for="exampleInputName">Name</label>
                            <input type="text" class="form-control" id="exampleInputName" asp-for="Role" placeholder="Name">
                        </div>
                        <button type="submit" class="btn btn-primary waves-effect waves-light">Create Role</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
</div>
