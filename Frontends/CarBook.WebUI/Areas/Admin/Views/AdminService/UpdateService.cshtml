@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Author</h4>
                        <p class="card-subtitle mb-4">Please fill in the information about the vehicle completely.</p>
                        <form method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Title</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Title" placeholder="Title">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Description</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Icon Url</label>
                                <input type="text" class="form-control" id="exampleInputIconUrl" asp-for="IconUrl" placeholder="IconUrl">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Update Service</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


